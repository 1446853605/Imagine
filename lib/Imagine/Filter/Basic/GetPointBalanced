<?php


use Imagine\Filter\FilterInterface;
use Imagine\Image\BoxInterface;
use Imagine\Image\ImageInterface;

class GetPointBalanced implements FilterInterface
{
    /**
     * @var mixed
     */
    private $image;
    /**
     * @var BoxInterface
     */
    private $size;

    /**
     * Constructs a GetPointBalanced filter
     *
     * @param $image
     * @param BoxInterface $size
     */
    public function __construct($image, BoxInterface $size)
    {
        $this->image = $image;
        $this->size = $size;
    }

    /**
     * {@inheritdoc}
     */
    public function apply(ImageInterface $image)
    {
        return $image->getPointBalanced($this->image, $this->size);
    }
}